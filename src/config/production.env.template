# EyeMotion Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ================================
# CORE CONFIGURATION
# ================================

# Application Environment
NODE_ENV=production
VITE_ENVIRONMENT=production
VITE_DOMAIN=eyemotionai.com

# ================================
# SUPABASE CONFIGURATION
# ================================

# Get these from your Supabase project settings
# Navigate to: Settings > API

# Project URL - Format: https://xxxxxxxxxxxxx.supabase.co
SUPABASE_URL=your_supabase_project_url_here

# Public Anonymous Key - Safe to use in frontend
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key - KEEP SECRET! Server-side only
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL - For direct database access (optional)
SUPABASE_DB_URL=your_supabase_database_url_here

# Frontend Environment Variables (Required for Vite)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ================================
# PAYMENT CONFIGURATION (OPTIONAL)
# ================================

# Stripe Configuration
# Get these from your Stripe dashboard
# Navigate to: Developers > API keys

# Secret Key - KEEP SECRET! Server-side only
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# Publishable Key - Safe to use in frontend
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Webhook Secret - For webhook signature verification
# Get this from: Developers > Webhooks > [Your webhook] > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for subscription plans (if using Stripe)
STRIPE_PRICE_CREATOR=price_your_creator_plan_id
STRIPE_PRICE_PRO=price_your_pro_plan_id
STRIPE_PRICE_STUDIO=price_your_studio_plan_id

# ================================
# AI SERVICES CONFIGURATION (OPTIONAL)
# ================================

# OpenAI Configuration
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI Organization (optional)
OPENAI_ORG_ID=org-your_organization_id_here

# Other AI Services (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ================================
# EMAIL CONFIGURATION (OPTIONAL)
# ================================

# SMTP Configuration for sending emails
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=hello@eyemotionai.com
SMTP_PASS=your_email_password_here

# Email addresses
FROM_EMAIL=hello@eyemotionai.com
ADMIN_EMAIL=admin@eyemotionai.com
SUPPORT_EMAIL=support@eyemotionai.com

# ================================
# MONITORING & ANALYTICS (OPTIONAL)
# ================================

# Vercel Analytics (automatic if using Vercel)
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# ================================
# NOTIFICATION SERVICES (OPTIONAL)
# ================================

# Slack Integration for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Emergency contact for critical alerts
EMERGENCY_PHONE=+1234567890
EMERGENCY_EMAIL=emergency@eyemotionai.com

# Discord Webhook (alternative to Slack)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ================================
# STORAGE CONFIGURATION (OPTIONAL)
# ================================

# AWS S3 (if using additional storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eyemotion-production-assets

# Cloudinary (for image optimization)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Secret for additional authentication (if needed)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=https://eyemotionai.com,https://www.eyemotionai.com,https://app.eyemotionai.com

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# ================================
# FEATURE FLAGS (OPTIONAL)
# ================================

# Enable/disable features for production
FEATURE_PAYMENTS_ENABLED=true
FEATURE_AI_SERVICES_ENABLED=true
FEATURE_CULTURAL_VERIFICATION_ENABLED=true
FEATURE_FFZ_FRAMEWORK_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MONITORING_ENABLED=true

# Beta features
BETA_ADVANCED_AI_ENABLED=false
BETA_COLLABORATIVE_EDITING_ENABLED=false
BETA_MOBILE_APP_ENABLED=false

# ================================
# CACHING CONFIGURATION (OPTIONAL)
# ================================

# Redis (if using Redis for caching)
REDIS_URL=redis://your_redis_instance_url:6379
REDIS_PASSWORD=your_redis_password

# Cache TTL (in seconds)
CACHE_TTL_SHORT=300     # 5 minutes
CACHE_TTL_MEDIUM=3600   # 1 hour
CACHE_TTL_LONG=86400    # 24 hours

# ================================
# CDN CONFIGURATION (OPTIONAL)
# ================================

# Cloudflare (if using Cloudflare)
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Custom CDN URL
CDN_URL=https://cdn.eyemotionai.com

# ================================
# BACKUP CONFIGURATION (OPTIONAL)
# ================================

# Backup storage
BACKUP_S3_BUCKET=eyemotion-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ================================
# DEVELOPMENT OVERRIDES (DO NOT USE IN PRODUCTION)
# ================================

# Only use these for testing production config locally
# NEVER set these to true in actual production!

# DEBUG_MODE=false
# SKIP_SSL_VERIFICATION=false
# DISABLE_RATE_LIMITING=false
# ENABLE_DEBUG_LOGS=false

